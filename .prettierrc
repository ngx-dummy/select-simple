{
	"arrowParens": "always",
	"endOfLine": "auto",
	"tabWidth": 2,
	"semi": true,
	"bracketSpacing": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"singleAttributePerLine": true,
	"printWidth": 180,
	"useTabs": true,
	"proseWrap": "preserve",
	"plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": ["*.scss"],
			"options": {
				"singleQuote": true
			}
		},
		{
			"files": ["*.html"],
			"options": {
				"printWidth": 80
			}
		}
	]
}
