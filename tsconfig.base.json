{
	"compilerOptions": {
		"target": "es2020",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"rootDir": "./",
		"baseUrl": "./",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true,
		"lib": ["ES2022", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"paths": {
			"@ngx-dummy/select-simple": ["packages/select-simple/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
